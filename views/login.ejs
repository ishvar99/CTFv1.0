<div class="row my-5">
    <div class="col-sm-8 col-md-6 col-lg-4 m-auto">
        <div class="card p-3">
            <div class="card-body ">
                <h2 class="text-center">Login</h2>
                <% include ./partials/messages %>
                <form action="/user/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label> 
                        <input type="email" name="email" id="email" class="form-control form-control-sm" placeholder="Enter your email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control form-control-sm" placeholder="Enter your password">
                    </div>
                    <button class="btn btn-danger w-100" type="submit">Submit</button>
                    <p class="mt-3 ">Don't have an account? <span class="text-danger"><a href="/user/register">Register</a></span></p>
                </form>
            </div>
        </div>
    </div>
</div>